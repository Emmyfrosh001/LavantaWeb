                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-exchange-alt text-info"></i>

                                <p class="text">Siteye Git</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-door-open text-danger"></i>
                                <p>Çıkış Yap</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
