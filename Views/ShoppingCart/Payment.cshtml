
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Payment -->
<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
            <div class="m-l-25 m-r--38 m-lr-0-xl">
                <div class="wrap-table-shopping-cart">
                    <form>
                        <table class="table-shopping-cart">
                            <tr>
                                <th>
                                    <div style="margin:30px 30px 0px 30px">
                                        <h4 class="mtext-109 cl2 p-b-30">
                                            Kredi Kartı
                                        </h4>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <div style="margin:10px 30px 10px 30px">
                                        Kredi Kartı Numarası <br />
                                        <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" style="width: 350px;" type="text" name="CartNumber" placeholder="Kredi Kartı Numarası" disabled>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div style="margin:10px 30px 10px 30px">
                                        Ad Soyad <br />
                                        <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" style="width:350px;" type="text" name="name" placeholder="Ad Soyad" disabled>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div style="margin:10px 30px 10px 30px">
                                        Kullanım Tarihi <br />
                                        <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="date" placeholder=" Kullanım Tarihi" disabled>
                                    </div>

                                    <script type="text/javascript"> //Ekran genişliği 720 px'in altında olduğunda CVC alanı alt satıra alınacak
                                        var viewportGenislik = window.innerWidth;

                                        if (viewportGenislik >= 720) {

                                            document.write('</td ><td>');
                                        }
                                        else {
                                            document.write('</td></tr><tr><td>');
                                        }

                                    </script>


                                    <div style="margin:10px 30px 10px 30px">
                                        CVC Numarası <br />
                                        <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="CVC" placeholder="CVC Numarası" disabled>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>

                <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                    @*<div class="flex-w flex-m m-r-20 m-tb-5">
                            <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">

                            <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                Apply coupon
                            </div>
                        </div>*@

                    <div style="margin-left:-10px">
                        <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" id="btnPayment">
                            Alışverişi Tamamla
                        </button>
                    </div>



                </div>
            </div>
        </div>

        <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
            <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                <h4 class="mtext-109 cl2 p-b-30">
                    EFT/Havale
                </h4>

                <div class="flex-w flex-t bor12 p-b-13">
                    <div class="size-508">
                        <span class="stext-110 cl2">
                            Sipariş Tutarını aşağıdaki IBAN adresine Adınız, Soyadınız ve Sipariş Nunarısını açıklamaya yazarak gönderebilirsiniz.
                        </span>
                    </div>

                </div>

                <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                    <div class="size-208 w-full-ssm">
                        <span class="stext-110 cl2">
                            Banka:
                        </span>
                    </div>

                    <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                        <p class="stext-111 cl6 p-t-2">
                            Ziraat Bankası
                        </p>
                    </div>
                    <div class="size-208 w-full-ssm">
                        <span class="stext-110 cl2">
                            IBAN:
                        </span>
                    </div>

                    <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                        <p class="stext-111 cl6 p-t-2">
                            TR 00 0000 0000 0000 0000
                        </p>
                    </div>
                    <div class="size-208 w-full-ssm">
                        <span class="stext-110 cl2">
                            Ad Soyad:
                        </span>
                    </div>

                    <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                        <p class="stext-111 cl6 p-t-2">
                            Deneme 123
                        </p>
                    </div>
                </div>

                <div class="flex-w flex-t p-t-27 p-b-33">
                    <div class="size-208">
                        <span class="mtext-101 cl2">
                            Total:
                        </span>
                    </div>

                    <div class="size-209 p-t-1">
                        <span class="mtext-110 cl2">
                            $79.65
                        </span>
                    </div>
                </div>

                <form action="@Url.Action("OrderAdd", "ShoppingCart")" method="post">
                    <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                        Alışverişi Tamamla
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


@section OzelScript
{


    <script>
        $('#btnPayment').click(function () {
            swal("Ödeme Tamamlanamadı!", "Websitemiz yapım aşamasındadır.", "error");

        });
    </script>


}