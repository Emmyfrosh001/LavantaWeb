@using EntityLayer.Concrete
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string statusbtn = "danger";
    string durumbutton = "";
    string durumbuttoncolor = "";}}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Admin Ürünler</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li><a href="/AdminProduct/AddProduct" class="btn btn-success"> Ürün Ekle </a> </li>  &nbsp;&nbsp;
                        <li class="breadcrumb-item"><a href="#">AdminProduct</a></li>
                        <li class="breadcrumb-item active">Index</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary card-outline">
                        <div class="card-body pad table-responsive">
                            @*<p>Veriler bu alanda olacak</p>*@

                            <div class="card">
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Adı</th>
                                                <th>Açıklama</th>
                                                <th>Stok</th>
                                                <th>Fiyatı</th>
                                                <th>Kategori</th>
                                                <th>Durumu</th>
                                                <th>Güncelle</th>
                                                <th>Durum Kontol</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.ProductID</td>
                                                    <td>@item.ProductName</td>
                                                    <td>@item.ProductDescription</td>
                                                    <td>@item.ProductStock</td>
                                                    <td>@item.ProductPrice</td>
                                                    <td>@item.Category.CategoryName</td>
                                                    <td>
                                                        @if (item.ProductStatus)
                                                        { statusbtn = "success"; }
                                                        else { statusbtn = "danger"; }
                                                        <font style="vertical-align: inherit;">
                                                            <font class="badge badge-@statusbtn" style="vertical-align: inherit;">
                                                                @if (item.ProductStatus)
                                                                {<font>Aktif</font> }
                                                                else
                                                                {<font>Pasif</font>}
                                                            </font>
                                                        </font>
                                                    </td>
                                                    <td><a href="/AdminProduct/EditProduct/@item.ProductID" class="btn btn-primary btn-sm">Güncelle</a></td>
                                                    <td>
                                                        @if (item.ProductStatus)
                                                        {
                                                            durumbuttoncolor = "danger";
                                                            durumbutton = "fas fa-trash";
                                                        }
                                                        else
                                                        {
                                                            durumbuttoncolor = "success";
                                                            durumbutton = "fas fa-plus-square";
                                                        }
                                                        <a class="btn btn-@durumbuttoncolor btn-sm" href="/AdminProduct/DeleteProduct/@item.ProductID">
                                                            <i class="@durumbutton">
                                                            </i>
                                                            @if (item.ProductStatus)
                                                            {
                                                                <font>Pasif Yap</font> }
                                                            else
                                                            {
                                                                <font>Aktif Yap</font>}
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Adı</th>
                                                <th>Açıklama</th>
                                                <th>Stok</th>
                                                <th>Fiyatı</th>
                                                <th>Kategori</th>
                                                <th>Durumu</th>
                                                <th>Güncelle</th>
                                                <th>Durum Kontol</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>

                        </div>
                        <!-- /.card -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- ./row -->

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

