@model EntityLayer.Concrete.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/Home/Index" class="stext-109 cl8 hov-cl1 trans-04">
            Ana Sayfa
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="/Product/Index" class="stext-109 cl8 hov-cl1 trans-04">

            @Html.DisplayFor(x => x.Category.CategoryName)
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>

        </a>

        <span class="stext-109 cl4">

            @Html.DisplayFor(x => x.ProductName)

        </span>
    </div>
</div>


<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        @*<div class="wrap-slick3-dots"></div>*@
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                        <div class="slick3 gallery-lb">
                            <div class="item-slick3" data-thumb="../../images/@Html.DisplayFor(x => x.ProductImage1)">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="~/images/@Html.DisplayFor(x => x.ProductImage1)" alt="IMG-PRODUCT">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/images/@Html.DisplayFor(x => x.ProductImage1)">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="item-slick3" data-thumb="../../images/@Html.DisplayFor(x => x.ProductImage2)">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="~/images/@Html.DisplayFor(x => x.ProductImage2)" alt="IMG-PRODUCT">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/images/@Html.DisplayFor(x => x.ProductImage2)">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="item-slick3" data-thumb="../../images/@Html.DisplayFor(x => x.ProductImage3)">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="~/images/@Html.DisplayFor(x => x.ProductImage3)" alt="IMG-PRODUCT">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/images/@Html.DisplayFor(x => x.ProductImage3)">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        @Html.DisplayFor(x => x.ProductName)
                    </h4>

                    <span class="mtext-106 cl2">
                        @Html.DisplayFor(x => x.ProductPrice) ₺
                    </span>

                    <p class="stext-102 cl3 p-t-23">
                        @Html.DisplayFor(x => x.ProductDetail)
                    </p>

                    <!--  -->
                    <div class="p-t-33">

                        <form class="form-horizontal" action="@Url.Action("AddCart", "ShoppingCart")" method="post">

                            <input type="hidden" name="ProductID" value="@Html.DisplayFor(x => x.ProductID)">
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-204 flex-w flex-m respon6-next">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>
                                        <input class="mtext-104 cl3 txt-center num-product" type="number" name="ProductPiece" value="1" max="@Html.DisplayFor(x => x.ProductStock)">

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>

                                    <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                        Sepete Ekle
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>


                    <!--  -->
                </div>
            </div>
        </div>

        <div class="bor10 m-t-50 p-t-43 p-b-40">
            <!-- Tab01 -->
            <div class="tab01">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item p-b-10">
                        <a class="nav-link active" data-toggle="tab" href="#description" role="tab">Ürün Açıklaması</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content p-t-43">
                    <!-- - -->
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <div class="how-pos2 p-lr-15-md">
                            <p class="stext-102 cl6">
                                @Html.DisplayFor(x => x.ProductDescription)
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


</section>

@section OzelScript
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (Session["statusAdd"] == "Basarili")
    {
        Session["statusAdd"] = null;
        @*<script>
                window.onload = function () {
                    swal("Ürününüz başarıyla sepetinize eklenmiştir!", "", "success");
                }
            </script>*@

        <script>
            window.onload = function () {
                Swal.fire({
                    icon: "success",
                    title: "Ürününüz başarıyla sepetinize eklenmiştir!",
                    showConfirmButton: false,
                    timer: 2500
                });
            }
        </script>
    }
}