@using EntityLayer.Concrete
@model List<Order>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    bool ordercount = false;
}
<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/Home/Index" class="stext-109 cl8 hov-cl1 trans-04">
            Hesabım
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">

            Siparişlerim

        </span>
    </div>
</div>
<br />
<br />
@*<form class="bg0 p-t-75 p-b-85" >*@
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-10 m-lr-auto m-b-50">
            <div class="m-l-25 m-r--38 m-lr-0-xl">
                <div class="wrap-table-shopping-cart">
                    <table class="table-shopping-cart">
                        <tr class="table_head">
                            <th class="column-1">Sipariş ID</th>
                            <th class="column-2">Tarih</th>
                            <th class="column-3">Durumu</th>
                            <th class="column-4"><center>Toplam Ücret</center></th>
                            <th><center>Detay</center></th>
                        </tr>


                        @foreach (var item in Model)
                        {

                            if (item == null)
                            {
                                ordercount = false;
                            }
                            else
                            {
                                ordercount = true;
                            }
                            <tr class="table_row">
                                <td class="column-1">@item.OrderID</td>
                                <td class="column-2">@item.OrderDateTime</td>
                                <td class="column-3">@item.OrderState</td>
                                <td><center>@item.OrderPrice ₺</center></td>
                                <td width="25%">
                                    <center>
                                        <a href="/Account/OrderDetail/@item.OrderID" class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                            Sipariş Detayı
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }

                        @if (ordercount)
                        {

                        }
                        else
                        {
                            <tr>
                                <td colspan="5">

                                    <p style="margin:45px">Hiç siparişiniz bulunmamaktadır!</p>
                                </td>
                            </tr>
                        }


                    </table>
                </div>


            </div>
        </div>


    </div>
</div>
@*</form>*@