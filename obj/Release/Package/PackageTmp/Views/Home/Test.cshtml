@model AydinogluLavender.Models.CityDistrict
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" integrity="sha512-+NqPlbbtM1QqiK8ZAo4Yrj2c4lNQoGv8P79DPtKzj++l5jnN39rHA/xsqn8zE9l0uSoxaCdrOgFs6yjyfbBxSg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <div>
        @Html.Label("iller")
        @Html.DropDownList("DropCity", Model.Cities, "- - Şehir Seçiniz - -", new { @class = "form-control" })

        @Html.Label("ilçeler")
        @Html.DropDownList("DropDistrict", Model.Districts, "- - İlçe Seçiniz - -", new { @class = "form-control" })
    </div>

    <script>
        $(function () {
            $('#DropCity').change(function () {
                var CityID = $('#DropCity').val();
                $.ajax({
                    url: '/Home/GetDistrict',
                    data: { p: CityID },
                    type: "POST",
                    dataType: "Json",
                    success: function (data) {
                        console.log(data);
                        $('#DropDistrict').empty();
                        for (var i = 0; i < data.length; i++) {
                            $('#DropDistrict').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");
                        }
                    }
                });
            });
        });
    </script>


</body>
</html>








